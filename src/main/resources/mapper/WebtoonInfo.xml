<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.woojaang.webtoon_recommendation.model.dao.WebtoonInfoDao">

	<select id="serchMoreThanOne" parameterType="String" resultType="WebtoonInfo"> 
		select *
		from webtoon
		where
			<foreach collection="array" item="item" index="index" separator=" or ">
				tags like concat('%', #{item}, '%')
			</foreach>
	</select>
	
	<select id="serchAll" parameterType="String" resultType="WebtoonInfo"> 
		select *
		from webtoon
		where
			<foreach collection="array" item="item" index="index" separator=" and ">
				tags like concat('%', #{item}, '%')
			</foreach>
	</select>
	
	<select id="test" resultType="WebtoonInfo">
		select *
		from webtoon
		where webtoonName = #{tag};
	</select>
	
	<select id="test2" parameterType="java.util.ArrayList" resultType="WebtoonInfo"> 
		select *
		from webtoon
		where
			<foreach collection="array" item="item" index="index" separator=" and ">
				tags like concat('%', #{item}, '%')
			</foreach>
	</select>
	
	<select id="test3" parameterType="java.util.ArrayList" resultType="WebtoonInfo"> 
		select *
		from webtoon
		where
			<foreach collection="array" item="item" index="index" separator=" and ">
				tags like concat('%', #{item}, '%')
			</foreach>
	</select>
	
</mapper>